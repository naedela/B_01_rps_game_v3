import random  # Import the random module to generate computer's choice

def determine_winner(user_choice, computer_choice):
    # Determine the winner of the game based on user's choice and computer's choice.
    if user_choice == computer_choice:
        return "It's a tie!"  # If both choose the same thing, it's a tie
    elif (user_choice == 'rock' and computer_choice == 'scissors') or \
         (user_choice == 'paper' and computer_choice == 'rock') or \
         (user_choice == 'scissors' and computer_choice == 'paper'):
        return "You win!"  # If player's choice beats computer's choice, player wins
    else:
        return "Computer wins!"  # If not, computer wins

def main():
    # Main function to run the game.
    print("Welcome to Rock, Paper, Scissors!")  # Welcome message to the player

    # Ask the player for the number of rounds
    total_rounds = int(input("Enter the number of rounds you want to play: "))
    player_score = 0  # Initialize player's score to 0
    computer_score = 0  # Initialize computer's score to 0
    
    # Loop through each round
    for round_num in range(1, total_rounds + 1):
        print("\nRound", round_num)  # Print current round number
        
        user_choice = input("Choose rock, paper, or scissors: ").lower()  # Ask the player for their choice
        computer_choice = random.choice(['rock', 'paper', 'scissors'])  # Generate computer's choice
        
        print("Computer's choice:", computer_choice)  # Print computer's choice
        
        result = determine_winner(user_choice, computer_choice)  # Determine the winner of the round
        print(result)  # Print the result of the round
        
        # Update scores based on the result
        if "You win" in result:
            player_score += 1
        elif "Computer wins" in result:
            computer_score += 1
        
        # Print current score
        print("Current Score - Player: {}, Computer: {}".format(player_score, computer_score))
    
    # Print final score
    print("\nFinal Score - Player: {}, Computer: {}".format(player_score, computer_score))
    if player_score > computer_score:
        print("Congratulations! You win!")
    elif player_score < computer_score:
        print("Computer wins! Better luck next time.")
    else:
        print("It's a tie! Good game!")

if __name__ == "__main__":
    main()  # Run the main function to start the game
